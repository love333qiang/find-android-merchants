<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity_login_bg"
    tools:context=".LoginActivity" >

    <EditText
        android:id="@+id/activityloginemail"
        android:layout_width="@dimen/activity_login_input_width"
        android:layout_height="@dimen/activity_login_input_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_login_input_email_top"
        android:hint="@string/activity_login_email_hint"
        android:singleLine="true"
        android:textSize="@dimen/activity_login_input_fontsize" >
		
        <requestFocus />
    </EditText>

   <EditText
        android:id="@+id/activityloginpassword"
        android:layout_width="@dimen/activity_login_input_width"
        android:layout_height="@dimen/activity_login_input_height"
        android:layout_below="@+id/activityloginemail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_login_input_margin"
        android:hint="@string/activity_login_password_hint"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="@dimen/activity_login_input_fontsize" >
    </EditText>

    <Button
        android:id="@+id/activityloginloginbtn"
        android:layout_width="@dimen/activity_login_input_width"
        android:layout_height="@dimen/activity_login_input_height"
        android:layout_below="@+id/activityloginpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_login_input_margin"
        android:background="@drawable/activity_login_loginbtn" 
        />
    <Button
        android:id="@+id/activityloginregisterbtn"
        android:layout_width="@dimen/activity_login_input_width"
        android:layout_height="@dimen/activity_login_input_height"
        android:layout_below="@+id/activityloginloginbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/activity_login_input_margin"
        android:background="@drawable/activity_login_registerbtn"
        />
</RelativeLayout>
